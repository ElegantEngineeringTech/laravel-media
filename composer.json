{
    "name": "finller/laravel-media",
    "description": "A flexible media library for Laravel",
    "keywords": [
        "finller",
        "laravel",
        "laravel-media"
    ],
    "homepage": "https://github.com/finller/laravel-media",
    "license": "MIT",
    "authors": [
        {
            "name": "Quentin Gabriele",
            "email": "quentin.gabriele@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "pbmedia/laravel-ffmpeg": "^8.3",
        "spatie/image": "^2.2",
        "spatie/laravel-package-tools": "^1.14.0",
        "spatie/temporary-directory": "^2.2"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Finller\\LaravelMedia\\": "src/",
            "Finller\\LaravelMedia\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Finller\\LaravelMedia\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-media --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Finller\\LaravelMedia\\LaravelMediaServiceProvider"
            ],
            "aliases": {
                "LaravelMedia": "Finller\\LaravelMedia\\Facades\\LaravelMedia"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
